using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Меню выбора:");
        Console.WriteLine("1. Ввести А");
        Console.WriteLine("2. Ввести В");
        Console.WriteLine("3. Выполнить операцию \"+\"");
        Console.WriteLine("4. Выполнить операцию \"-\"");
        Console.WriteLine("5. Выполнить операцию \" * \"");
        Console.WriteLine("6. Выполнить операцию \"/\"");
        Console.WriteLine("Введите номер пункта меню:");

        string input = Console.ReadLine();
        int choice = Convert.ToInt32(input);

        switch (choice)
        {
            case 1:
                Console.WriteLine("Вы выбрали пункт 1 - ввести А");
                break;
            case 2:
                Console.WriteLine("Вы выбрали пункт 2 - ввести В");
                break;
            case 3:
                Console.WriteLine("Вы выбрали пункт 3 - выполнить операцию \"+\"");
                break;
            case 4:
                Console.WriteLine("Вы выбрали пункт 4 - выполнить операцию \"-\"");
                break;
            case 5:
                Console.WriteLine("Вы выбрали пункт 5 - выполнить операцию \" * \"");
                break;
            case 6:
                Console.WriteLine("Вы выбрали пункт 6 - выполнить операцию \"/\"");
                break;
            default:
                Console.WriteLine("Неверный выбор. Попробуйте еще раз.");
                break;
        }
    }
}
